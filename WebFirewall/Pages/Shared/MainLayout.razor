@using Microsoft.AspNetCore.Components.Web
@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="page">


    <main>

        <a href="/swagger">Lien vers la page Swagger</a>
        <div class="top-row px-4">
            <span class="text-nowrap">
                <i class="fas fa-clock me-1"></i>
                <span id="currentTime"></span>
            </span>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<script>
    // Mise à jour de l'heure en temps réel
    function updateTime() {
        const now = new Date();
        const timeString = now.toLocaleTimeString('fr-FR');
        const timeElement = document.getElementById('currentTime');
        if (timeElement) {
            timeElement.textContent = timeString;
        }
    }

    // Démarrer la mise à jour du temps
    if (typeof window.timeInterval === 'undefined') {
        updateTime();
        window.timeInterval = setInterval(updateTime, 1000);
    }
</script>

@code {
    private bool isLoading = false;

    private void GoToSwagger()
    {
        Navigation.NavigateTo("/swagger");
    }
}
